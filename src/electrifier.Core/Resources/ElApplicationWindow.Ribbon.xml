  <!-- ========================================================================================================================
  ==== Application Views ======================================================================================================
  ========================================================================================================================= -->

  <Application.Views>
    <Ribbon>

      <Ribbon.QuickAccessToolbar>
        <QuickAccessToolbar CommandName="CmdQAT"
                            CustomizeCommandName="CmdCustomizeQAT">
          <QuickAccessToolbar.ApplicationDefaults>
            <Button CommandName="CmdBtnQAT_OpenNewShellBrowserPanel"/>
          </QuickAccessToolbar.ApplicationDefaults>
        </QuickAccessToolbar>
      </Ribbon.QuickAccessToolbar>

      <Ribbon.HelpButton>
        <HelpButton CommandName="CmdBtnHelp" />
      </Ribbon.HelpButton>

      <Ribbon.ApplicationMenu>
        <ApplicationMenu CommandName="CmdBtnApp_ApplicationMenu">
          <MenuGroup>
            <Button CommandName="CmdBtnApp_OpenNewWindow" />
            <Button CommandName="CmdBtnApp_OpenNewShellBrowserPanel" />
            <Button CommandName="CmdBtnApp_OpenCommandPrompt" />
            <Button CommandName="CmdBtnApp_OpenWindowsPowerShell" />
          </MenuGroup>
          <MenuGroup>
            <Button CommandName="CmdBtnApp_ChangeElectrifierOptions" />
            <Button CommandName="CmdBtnApp_ChangeFolderAndSearchOptions" />
            <SplitButton CommandName="CmdBtnApp_HelpMenu">
              <SplitButton.ButtonItem>
                <Button CommandName="CmdBtnApp_Help" />
              </SplitButton.ButtonItem>
              <SplitButton.MenuGroups>
                <MenuGroup Class="MajorItems">
                  <!--<Button CommandName="CmdBtnApp_Help_Help" />-->
                  <Button CommandName="CmdBtnApp_Help_AboutElectrifier" />
                </MenuGroup>
                <MenuGroup Class="MajorItems">
                  <Button CommandName="CmdBtnApp_Help_AboutWindows" />
                </MenuGroup>
              </SplitButton.MenuGroups>
            </SplitButton>
            <Button CommandName="CmdBtnApp_Close" />
          </MenuGroup>
        </ApplicationMenu>
      </Ribbon.ApplicationMenu>

      <Ribbon.Tabs>
        <Tab CommandName="CmdTabHome">
          <Group CommandName="CmdGrpHomeClipboard" SizeDefinition="ThreeButtons">
            <Button CommandName="CmdBtnClipboardCut" />

            <SplitButton CommandName="SplBtnClipboardCopy">
              <SplitButton.ButtonItem>
                <Button CommandName="CmdBtnClipboardCopy" />
              </SplitButton.ButtonItem>
              <!-- TODO: Heading possible? 'Copy Special...' -->
              <SplitButton.MenuGroups>
                <MenuGroup Class="MajorItems">
                  <Button CommandName="CmdBtnClipboardCopy" />
                </MenuGroup>
                <MenuGroup Class="StandardItems">
                  <Button CommandName="CmdClipboardCopyFullFilePaths"/>
                  <Button CommandName="CmdClipboardCopyFileNames"/>
                  <Button CommandName="CmdClipboardCopyDirectoryPaths"/>
                </MenuGroup>
              </SplitButton.MenuGroups>
            </SplitButton>

            <SplitButton CommandName="SplBtnClipboardPaste">
              <SplitButton.ButtonItem>
                <Button CommandName="CmdBtnClipboardPaste" />
              </SplitButton.ButtonItem>

              <SplitButton.MenuGroups>
                <MenuGroup Class="MajorItems">
                  <Button CommandName="CmdBtnClipboardPaste" />
                </MenuGroup>
                <!-- TODO: Heading possible? 'Copy Special...' -->
                <MenuGroup Class="MajorItems">
                  <Button CommandName="CmdBtnClipboardPasteAsNewFile" />
                  <!-- TODO: Silent CheckBox to avoid Dialog-Based 'Paste Into', which will ask for FileName and ImageType etc. ?!? -->
                </MenuGroup>
                <MenuGroup Class="StandardItems">
                  <Button CommandName="CmdBtnClipboardPasteAsNewTextFile"/>
                </MenuGroup>
                <MenuGroup Class="StandardItems">
                  <Button CommandName="CmdBtnClipboardPasteAsNewBMPFile"/>
                  <Button CommandName="CmdBtnClipboardPasteAsNewJPGFile"/>
                  <Button CommandName="CmdBtnClipboardPasteAsNewPNGFile"/>
                  <Button CommandName="CmdBtnClipboardPasteAsNewGIFFile"/>
                </MenuGroup>
              </SplitButton.MenuGroups>

            </SplitButton>
          </Group>

          <Group CommandName="CmdGrpHomeOrganise" SizeDefinition="FourButtons">
            <Button CommandName="CmdBtnOrganiseMoveTo" />
            <Button CommandName="CmdBtnOrganiseCopyTo" />
            <!-- TODO: Seperator -->
            <Button CommandName="CmdBtnOrganiseDelete" />
            <Button CommandName="CmdBtnOrganiseRename" />
          </Group>

          <Group CommandName="CmdGrpHomeNew">

          </Group>

          <Group CommandName="CmdGrpHomeOpen">

          </Group>

          <Group CommandName="CmdGrpHomeSelect">
            <Button CommandName="CmdBtnSelectSelectAll" />
            <Button CommandName="CmdBtnSelectSelectNone" />
            <Button CommandName="CmdBtnSelectInvertSelection" />
          </Group>
        </Tab>

        <Tab CommandName="CmdTabShare">

        </Tab>

        <Tab CommandName="CmdTabView">

        </Tab>

        <Tab CommandName="CmdTabDesktop">
          <Group CommandName="CmdGrpDesktopIconLayout" SizeDefinition="TwoButtons">
            <Button CommandName="CmdBtnDesktopIconLayoutSave" />
            <Button CommandName="CmdBtnDesktopIconLayoutRestore" />
          </Group>
        </Tab>

      </Ribbon.Tabs>

    </Ribbon>
  </Application.Views>

