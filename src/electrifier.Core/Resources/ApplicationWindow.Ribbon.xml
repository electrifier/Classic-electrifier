            </Group>
            <Group CommandName="GrpDesktopShortcuts" SizeDefinition="TwoButtons">
              <Button CommandName="BtnDesktopShortcutsDefaults"/>
              <Button CommandName="BtnDesktopShortcutsValidate"/>
            </Group>
          </Tab>
        </TabGroup>
