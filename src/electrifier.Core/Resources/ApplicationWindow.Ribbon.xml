  <Application.Views>
    <Ribbon>
      <!-- ====================================================================================================================
      ==== Quick Access Toolbar ===============================================================================================
      ===================================================================================================================== -->
      <Ribbon.QuickAccessToolbar>
        <QuickAccessToolbar CommandName="QuickAccessToolbar" CustomizeCommandName="BtnQATCustomize">
          <QuickAccessToolbar.ApplicationDefaults>
            <Button CommandName="BtnQATOpenNewShellBrowserPanel" />
          </QuickAccessToolbar.ApplicationDefaults>
        </QuickAccessToolbar>
      </Ribbon.QuickAccessToolbar>
      <Ribbon.HelpButton>
        <HelpButton CommandName="BtnQATHelp" />
      </Ribbon.HelpButton>
      <!-- ====================================================================================================================
      ==== Application Menu ===================================================================================================
      ===================================================================================================================== -->
      <Ribbon.ApplicationMenu>
        <ApplicationMenu CommandName="BtnAppApplicationMenu">
          <MenuGroup>
            <Button CommandName="BtnAppOpenNewWindow" />
            <Button CommandName="BtnAppOpenNewShellBrowserPanel" />
            <Button CommandName="BtnAppOpenCommandPrompt" />
            <Button CommandName="BtnAppOpenWindowsPowerShell" />
          </MenuGroup>
          <MenuGroup>
            <Button CommandName="BtnAppChangeElectrifierOptions" />
            <Button CommandName="BtnAppChangeFolderAndSearchOptions" />
            <SplitButton CommandName="SplAppHelpMenu">
              <SplitButton.ButtonItem>
                <Button CommandName="BtnAppHelp" />
              </SplitButton.ButtonItem>
              <SplitButton.MenuGroups>
                <MenuGroup Class="MajorItems">
                  <!--<Button CommandName="BtnAppHelp_Help" />-->
                  <Button CommandName="BtnAppHelp_AboutElectrifier" />
                </MenuGroup>
                <MenuGroup Class="MajorItems">
                  <Button CommandName="BtnAppHelp_AboutWindows" />
                </MenuGroup>
              </SplitButton.MenuGroups>
            </SplitButton>
            <Button CommandName="BtnAppClose" />
          </MenuGroup>
        </ApplicationMenu>
      </Ribbon.ApplicationMenu>
      <!-- ====================================================================================================================
      ==== Ribbon Tabs ========================================================================================================
      ===================================================================================================================== -->
      <Ribbon.Tabs>
        <Tab CommandName="TabHome">
          <Group CommandName="GrpHomeClipboard" SizeDefinition="FourButtons">
            <Button CommandName="BtnClipboardCut" />
            <SplitButton CommandName="SplClipboardCopy">
              <SplitButton.ButtonItem>
                <Button CommandName="BtnClipboardCopy" />
              </SplitButton.ButtonItem>
              <!-- TODO: Heading possible? 'Copy Special' -->
              <SplitButton.MenuGroups>
                <MenuGroup Class="MajorItems">
                  <Button CommandName="BtnClipboardCopy" />
                </MenuGroup>
                <MenuGroup Class="StandardItems">
                  <Button CommandName="BtnClipboardCopyFullFilePaths" />
                  <Button CommandName="BtnClipboardCopyFileNames" />
                  <Button CommandName="BtnClipboardCopyDirectoryPaths" />
                </MenuGroup>
              </SplitButton.MenuGroups>
            </SplitButton>
            <SplitButton CommandName="SplClipboardPaste">
              <SplitButton.ButtonItem>
                <Button CommandName="BtnClipboardPaste" />
              </SplitButton.ButtonItem>
              <SplitButton.MenuGroups>
                <MenuGroup Class="MajorItems">
                  <Button CommandName="BtnClipboardPaste" />
                </MenuGroup>
                <!-- TODO: Heading possible? 'Paste Special' -->
                <MenuGroup Class="MajorItems">
                  <Button CommandName="BtnClipboardPasteAsNewFile" />
                  <!-- TODO: Silent CheckBox to avoid Dialog-Based 'Paste Into', which will ask for FileName and ImageType etc. ?!? -->
                </MenuGroup>
                <MenuGroup Class="StandardItems" CommandName="BtnClipboardPasteAsNewText">
                  <Button CommandName="BtnClipboardPasteAsNewTextFile" />
                </MenuGroup>
                <MenuGroup Class="StandardItems" CommandName="BtnClipboardPasteAsNewImage">
                  <Button CommandName="BtnClipboardPasteAsNewBMPFile" />
                  <Button CommandName="BtnClipboardPasteAsNewJPGFile" />
                  <Button CommandName="BtnClipboardPasteAsNewPNGFile" />
                  <Button CommandName="BtnClipboardPasteAsNewGIFFile" />
                </MenuGroup>
              </SplitButton.MenuGroups>
            </SplitButton>
            <ToggleButton CommandName="BtnClipboardHistory" />
          </Group>
          <Group CommandName="GrpHomeOrganise" SizeDefinition="FourButtons">
            <Button CommandName="BtnOrganiseMoveTo" />
            <Button CommandName="BtnOrganiseCopyTo" />
            <!-- TODO: Seperator -->
            <Button CommandName="BtnOrganiseDelete" />
            <Button CommandName="BtnOrganiseRename" />
          </Group>
          <!--<Group CommandName="GrpHomeNew" />-->
          <!--<Group CommandName="GrpHomeOpen" />-->
          <Group CommandName="GrpHomeSelect" SizeDefinition="BigButtonsAndSmallButtonsOrInputs">
            <ControlGroup>
              <Button CommandName="BtnSelectConditional" />
            </ControlGroup>
            <ControlGroup>
              <Button CommandName="BtnSelectSelectAll" />
              <Button CommandName="BtnSelectSelectNone" />
              <Button CommandName="BtnSelectInvertSelection" />
            </ControlGroup>
          </Group>
          <Group CommandName="GrpHomeView" SizeDefinition="OneButton">
            <DropDownButton CommandName="DdbHomeViewLayout">
              <ToggleButton CommandName="BtnHomeViewExtraLargeIcons" />
              <ToggleButton CommandName="BtnHomeViewLargeIcons" />
              <ToggleButton CommandName="BtnHomeViewMediumIcons" />
              <ToggleButton CommandName="BtnHomeViewSmallIcons" />
              <ToggleButton CommandName="BtnHomeViewList" />
              <ToggleButton CommandName="BtnHomeViewDetails" />
              <ToggleButton CommandName="BtnHomeViewTiles" />
              <ToggleButton CommandName="BtnHomeViewContent" />
            </DropDownButton>
          </Group>
        </Tab>
        <!--TODO: <Tab CommandName="TabShare" />-->
        <!--TODO: <Tab CommandName="TabView" />-->
      </Ribbon.Tabs>
      <!-- ====================================================================================================================
      ==== Ribbon Contextual Tabs =============================================================================================
      ===================================================================================================================== -->
      <Ribbon.ContextualTabs>
        <TabGroup CommandName="TabGrpDesktopTools">
          <Tab CommandName="TabDesktopIconManagement">
            <Group CommandName="GrpDesktopIconSettings" SizeDefinition="BigButtonsAndSmallButtonsOrInputs">
              <ControlGroup>
                <Button CommandName="BtnDesktopIconSettingsSaveLayout" />
